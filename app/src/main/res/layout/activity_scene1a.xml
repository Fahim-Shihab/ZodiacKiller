<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.zodiackiller.Scene1a">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/room_a"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/tool"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#0000"
        android:layout_marginTop="250dp"
        android:layout_marginStart="300dp"/>
    <TextView
        android:id="@+id/ToolView"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:text="Tool"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />
    <Button
        android:id="@+id/Leave"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="500dp"
        android:text="Leave the room"
        android:background="#0000"
        android:textColor="#fff9"
        android:textSize="12sp"
        />

    <Button
        android:id="@+id/window"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#0000"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/Window"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:text="Window"
        android:layout_marginStart="50dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />

    <Button
        android:id="@+id/note"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#0000"
        android:layout_marginTop="190dp"
        android:layout_marginStart="175dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/Note1"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:text="Note 1"
        android:layout_marginStart="105dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/paper"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="#0000"
        android:layout_alignBaseline="@+id/mirror"
        android:layout_alignBottom="@+id/mirror"
        android:layout_alignStart="@+id/Leave" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/Note2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Note 2"
        android:layout_marginStart="150dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />
    
    <Button
        android:id="@+id/mirror"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#0000"
        android:layout_marginTop="90dp"
        android:layout_marginStart="362dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/mirr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Mirror"
        android:layout_marginStart="205dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="550dp"
        android:background="#0000"
        android:id="@+id/suitcase"
        />


    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="335dp"
        android:background="#0000"
        android:id="@+id/drawer"
        />
    <TextView
        android:id="@+id/Draw"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Drawer"
        android:layout_marginStart="260dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />

    <TextView
        android:id="@+id/brie"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Briefcase"
        android:layout_marginStart="320dp"
        android:textSize="12sp"
        android:textColor="#fff9"
        />

</RelativeLayout>
